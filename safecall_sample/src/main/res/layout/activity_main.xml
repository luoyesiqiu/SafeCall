<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_normal_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/normal_call_text" />

    <Button
        android:id="@+id/btn_problem_call1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/problem_call_text1" />


    <Button
        android:id="@+id/btn_problem_call2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/problem_call_text2" />

</LinearLayout>